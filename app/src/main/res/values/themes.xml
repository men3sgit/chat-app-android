<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Chat_app" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_text</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Chat_app.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    <style name="Theme.Chat_app.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

<!--    <style name="Theme.Chat_app.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <!--    Light mode-->
    <style name="PRIMARY_TEXT">
        <item name="android:textColor">@color/primary_light</item>
    </style>
    <style name="SECONDARY_TEXT">
        <item name="android:textColor">@color/secondary_light</item>
    </style>
    <style name="SCREEN">
        <item name="android:background">@color/background_light_mode</item>
    </style>
    <style name="BLANK">
        <item name="android:background">@color/blank_light</item>
    </style>
    <style name="MAIN_CONTENT_BACKGROUND">
        <item name="android:background">@drawable/background_content_bottom_light</item>
    </style>

