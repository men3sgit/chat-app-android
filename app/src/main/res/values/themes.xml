<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Chat_app" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_text</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Chat_app.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Chat_app.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Chat_app.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--    Light mode-->
    <style name="PRIMARY_TEXT">
        <item name="color">#1e1e1e</item>
    </style>
    <style name="SECONDARY_TEXT">
        <item name="color">#666</item>
    </style>
    <style name="SCREEN">
        <item name="background">#eee</item>
    </style>
    <style name="BLANK">
        <item name="android:background">#DDD</item>
    </style>
</resources>